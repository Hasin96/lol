@model App_tracker.ViewModels.ContainersViewModel
@{
    ViewData["Title"] = "Today's appointments";
}

<style>
    .custom-card-title {
        font-size: 12px;
        color: #102A42;
    }

    .custom-text-deemphasize {
        font-size: 10px;
        color: #829AB0;
    }

    .custom-svg-link {
        color: #102a42;
    }

        .custom-svg-link:focus,
        .custom-svg-link:hover {
            color: #102a42;
            text-decoration: none;
        }


        section {
            margin-left:-15px;
            margin-right: -15px;
        }

    /*
        Icons
    */

    svg {
        cursor: pointer;
        text-decoration: none;
        color: #102a42;
    }

        svg:focus,
        svg:hover {
            text-decoration: none;
            color: #102a42;
        }
</style>

<h1 class="mt-5 custom-text-default custom-title">Appointments</h1>
    
<section class="filters pl-0 pr-0">
    <div class="input-group mb-2">
        <div class="input-group-prepend">
            <div class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8" /><line x1="21" y1="21" x2="16.65" y2="16.65" /></svg></div>
        </div>
        <input type="text" class="form-control mr-2" placeholder="Search for an appointment" style="max-width:230px;">
        <input type="date" class="form-control js-appointment-start-date-inp" style="max-width:200px;" value="@Model.StartOf4DayWeekDate.ToString("yyyy-MM-dd")" />
        <a href="/api/containers/@Model.StartOf4DayWeekDate.ToString("yyyy-MM-dd")" class="btn btn-light mr-2 js-create-excel-btn">Generate excel file</a>
        <a href="@Url.Action("Create", "Home")" class="btn btn-primary">Create new</a>
    </div>
</section>
    

<div class="row">
    @foreach (var containerStatus in Model.ContainerStatuses)
    {
        <div class="col">
            <div class="card">
                <div class="card-body js-status-column" data-status-id="@containerStatus.Id">
                    <h1 class="custom-sub-title custom-row-seperator">@containerStatus.Status</h1>
                    @foreach (var container in Model.Containers)
                    {
                        @if (container.StatusId == containerStatus.Id)
                        {
                            <div class="card js-custom-container-card mb-2" draggable="true" id="@container.Id">
                                <div class="card-body pt-1 pb-1">
                                    <div class="row">
                                        <div class="col pl-0">
                                            <div class="custom-card-title">@container.RefNum</div>
                                        </div>
                                        <div class="pr-0 col d-flex justify-content-end js-more-icon" data-container-id="@container.Id">
                                            <svg class="feather feather-more-vertical more-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="1"></circle><circle cx="12" cy="5" r="1"></circle><circle cx="12" cy="19" r="1"></circle></svg>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col pl-0">
                                            <div class="custom-text-deemphasize">
                                                @Model.ToString(container)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col pl-0">
                                            <p class="js-bay" style="font-size:12px;">
                                                @container.Bay?.Bay
                                            </p>
                                        </div>
                                    
                                    </div>
                                    <div class="row">
                                        <div class="col pl-1">
                                            <p>@container.ContainerComments.Count() <text>comments</text></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

        </div>
    }
</div>

<!-- Add bay and door number -->
<div class="modal fade" id="activationDetailsFormModal" tabindex="-1" role="dialog" aria-labelledby="activationDetailsFormModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form class="containerActivationDetailsForm">
                    <input type="hidden" name="ContainerId" />
                    <input type="hidden" name="NewStatusId" />
                    <div class="form-group">
                        <label class="text-custom-primary" asp-for="Bays">Bay</label>
                        <select name="BayId" asp-items="@Model.Bays" class="form-control" required>
                            <option value=""></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="text-custom-primary" asp-for="Doors">Door</label>
                        <select name="DoorId" asp-items="@Model.Doors" class="form-control" required>
                            <option value=""></option>
                        </select>
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary mr-2">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Confirm delete Modal -->
<div class="modal fade js-confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="ConfirmDelete" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h2 class="mb-3 custom-sub-title">Are you sure you want to delete this container data?</h2>
                <div class="row">
                    <div class="col">
                        <button type="button" class="btn btn-danger js-confirm-del-btn">Delete</button>
                        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <environment include="Development">

        <script src="~/js/Views/Home/index.js"></script>
        <script>
            $(document).ready(function () {
                IndexModule.init();
            })
        </script>
    </environment>
}
